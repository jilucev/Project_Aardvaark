%h1 users index

/ signup form for users
%h3 User sign up

= form_for @users do |f|

  = f.label "first name"
  = f.text_field :firstname
  %br
  = f.label "last name"
  = f.text_field :lastname
  %br
  = f.label "email"
  = f.text_field :email
  %br
  = f.label "phone number"
  = f.text_field :phone
  %br
  = f.label "gender"
  = select_tag "gender", "<option>female</option><option>male</option><option>-</option>".html_safe
  %br
  = f.label "age"
  = f.number_field :age
  %br
  = f.label "Do you have a vehicle?"
  = select_tag "vehicle", "<option>yes</option><option>no</option>".html_safe
  %br
  = f.label "how many passengers can your vehicle take?"
  = f.number_field :passenger_capacity
  %br
  = f.label "password"
  = f.password_field :password
  %br
  = f.submit "Submit"
  %br

%h2 Log In

= form_tag session_path do

  = label_tag "email"
  = text_field_tag "email"
  %br
  = label_tag :password
  = password_field_tag :password
  %br
  = submit_tag "Submit"

- if current_user
  - if current_user.firstname
    %h3.text-center Hey, hey #{current_user.firstname}, you're a volunteer!
    = link_to "Log Out", session_path("current_user"), method: :delete
  - else
    %h3.text-center Hey, hey #{current_user.name}, you so'n so, get outta here you Organization!
    = link_to "Log Out", session_path("current_user"), method: :delete